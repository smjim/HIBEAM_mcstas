/* instrument definition: name, parameters & default values */
DEFINE INSTRUMENT tutorial_SANS()

TRACE

COMPONENT origin = Progress_bar()
AT (0, 0, 0) ABSOLUTE

COMPONENT arm_source = Arm()
AT (0, 0, 0) RELATIVE origin

COMPONENT source = Source_simple(
    radius=0.02, 
    dist=20, 
    focus_xw=1.98, 
    focus_yh=1.98, 
    lambda0=6, 
    dlambda=0.05, 
    flux=1E8)
AT (0, 0, 0) RELATIVE PREVIOUS

COMPONENT venbla_y = Venbla(
    reflect="data/refl_m6.dat", 
    ydet=0.0,
    zvb=8, 
    zdet=20, 
    ydet=0,
    hvb=0.6, 
    wvb=0.6, 
    hdet=0.2)
AT (0, 0, 8) RELATIVE source

COMPONENT psd_monitor = PSD_monitor(
    nx=128, 
    ny=128, 
    filename="PSD_mon.dat", 
    xwidth=2.0, 
    yheight=2.0)
AT (0, 0, 20) RELATIVE source

